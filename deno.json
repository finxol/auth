{
    "tasks": {
        "dev": "deno run --watch --allow-env --allow-net --allow-read --allow-write src/main.ts"
    },
    "imports": {
        "hono": "jsr:@hono/hono@^4.7.10",
        "openauth": "npm:@openauthjs/openauth",
        "ofetch": "npm:ofetch@^1.4.1",
        "zod": "npm:zod@^3.25.28"
    },
    "fmt": {
        "useTabs": false,
        "lineWidth": 80,
        "indentWidth": 4,
        "semiColons": false,
        "singleQuote": false,
        "proseWrap": "preserve",
        "include": ["src/"],
        "exclude": ["src/testdata/", "src/fixtures/**/*.ts"]
    },
    "unstable": ["kv"]
}
